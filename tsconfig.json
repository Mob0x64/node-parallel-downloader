

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "es5"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/**/*"
  ]
}

